<h2>Log in</h2>

<% if flash[:error].present? %>
  <h3><%= flash[:error] %></h3>
<% end %>
<div class="form-group">
<%= form_tag login_path do %>

    <%= label_tag :email, nil, class: "form-control col-md-2" %>
    <%= email_field_tag :email, nil, class: "was-validated form-control col-md-4" %>
    <br>
    <%= label_tag :password, nil, class: "form-control col-md-2" %>
    <%= password_field_tag :password, nil, class: "was-validated form-control col-md-4"  %>
  <br>
  <%= submit_tag "Sign in", name: nil , class: "btn btn-primary btn-lg " %>
<% end %>
</div>
