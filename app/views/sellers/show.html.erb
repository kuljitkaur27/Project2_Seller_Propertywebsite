<h1><%= @seller.name %> Details.....</h1>

<h2>Personal Information :</h2>
<ul>
  <li>Phone_no      : <%= @seller.phone_no %></li>
  <li>Email address : <%= @seller.email %></li>
</ul>

<h2>Open Properties :</h2>
<% @seller.properties.each do |property| %>
  <% if property.main_image.present? %>
  <%= link_to image_tag(property.main_image), property %>
  <% else %>
  <%= link_to image_tag('/assets/images.jpeg'), property %>
  <% end %>
<% end %>

<div class="controls">
  <%= link_to "Edit Details", edit_seller_path(@seller) %>
  <%= link_to "Delete #{ @seller.name }", @seller, :method => 'delete' %>
</div>
