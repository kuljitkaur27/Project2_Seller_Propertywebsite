<h1><%= @seller.name %> Details.....</h1>

<h2>Personal Information :</h2>
<ul>
  <li>Phone_no      : <%= @seller.phone_no %></li>
  <li>Email address : <%= @seller.email %></li>
</ul>

<h2>Open Properties :</h2>
<% @seller.properties.each do |property| %>
  <%= link_to image_tag(property.main_image), edit_property_path(property) if property.main_image.present? %>
<% end %>

<div class="controls">
  <%= link_to "Edit #{ @seller.name } Details", seller_path(@seller) %>
  <%= link_to "Delete #{ @seller.name }", @seller, :method => 'delete' %>
</div>
