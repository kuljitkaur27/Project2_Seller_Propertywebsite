<!-- Information about the Property -->
<ul>
  <li>Location             : <%= @property.location %></li>
  <li>Price                : <%= @property.price %></li>
  <li>Construction Year    : <%= @property.price %></li>
  <li>Type                 : <%= @property.property_type %></li>
  <li>Bedrooms             : <%= @property.bedrooms %></li>
  <li>Bathrooms            : <%= @property.bathrooms %></li>
  <li>CarSpaces            : <%= @property.car_spaces %></li>
  <li>Landsize             : <%= @property.landsize %></li>
  <li>Bonus Features       : <%= @property.bonus_features %></li>
  <li>Status               : <%= @property.status %></li>
</ul>

<!-- Seller Details -->
<% if @property.seller.present?  %>
<div class="badge badge-info">
<h3> Contact Details......</h3>
<div class="badge badge-secondary" ><h4> Seller : <%= @property.seller.name %> </h4>
</div>
</div>
<ul>
  <li>Phone Number  : <%= @property.seller.phone_no %></li>
  <li>Email Id      : <%= link_to @property.seller.user.email %></li>
  <div class = "container p-3 my-3 bg-info text-white container-md border text-dark ">
  <li>Owners of the property       :
    <ul>
    <% @property.seller.owners.each do |o| %>
    <div class = "container p-3 my-3 bg-secondary text-white container-md border">
      <li>Name         : <%= o.name%></li>
      <li>Phone        : <%= o.phone_no%></li>
      <li>Email        : <%= o.email%></li>
    </div>
      <% end %>
    </div>
    </ul>
    </li>
</ul>
<% end %>


<% if @current_user.present? %>
<div class="controls">
<div class="badge badge-success">  <%= link_to "Edit Property", edit_property_path(@property) %> </div>
<div class="badge badge-pill badge-danger" >  <%= button_to "Delete Property", @property, :method => 'delete', :data => { :confirm => 'Are you sure?' } %> </div>
</div>
<% end %>
