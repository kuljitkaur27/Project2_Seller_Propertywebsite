<!DOCTYPE html>
<html>
  <head>
    <title>Project1</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
    <%= link_to "Home", root_path %>
    |
    <% if @current_user.present? %>
        <%= link_to "All users", users_path if @current_user.admin? %>
        <%= link_to "Sign out #{ @current_user.email }", login_path, :method => 'delete' %>
      <% else %>
        <%= link_to "Sign up", new_user_path %>
        <%= link_to "Sign in", login_path %>
      <% end %>
    <%= link_to "Sellers", sellers_path %>
    <%= link_to "New Seller", new_seller_path %>
    |
    <%= link_to "Properties", properties_path %>
    <%= link_to "New Property", new_property_path %>
    </nav>
    <%= yield %>
  </body>
</html>
